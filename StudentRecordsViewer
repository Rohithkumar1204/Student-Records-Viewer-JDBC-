import java.sql.*;

public class StudentRecordsViewer {
    public static void main(String[] args) {
        // Database connection details
        String url = "jdbc:mysql://localhost:3306/schooldb"; // your DB name
        String user = "root";  // your username
        String password = "1234"; // your password

        try {
            // Step 1: Load and register driver
            Class.forName("com.mysql.cj.jdbc.Driver");

            // Step 2: Establish connection
            Connection con = DriverManager.getConnection(url, user, password);

            // Step 3: Create statement
            Statement stmt = con.createStatement();

            // Step 4: Execute SQL SELECT query
            String query = "SELECT * FROM student";
            ResultSet rs = stmt.executeQuery(query);

            // Step 5: Display results
            System.out.println("---- Student Records ----");
            System.out.println("ID\tName\t\tCourse\t\tMarks");
            System.out.println("-----------------------------------------");

            while (rs.next()) {
                int id = rs.getInt("id");
                String name = rs.getString("name");
                String course = rs.getString("course");
                int marks = rs.getInt("marks");

                System.out.println(id + "\t" + name + "\t\t" + course + "\t\t" + marks);
            }

            // Step 6: Close resources
            rs.close();
            stmt.close();
            con.close();

        } catch (ClassNotFoundException e) {
            System.out.println("Driver not found: " + e);
        } catch (SQLException e) {
            System.out.println("Database error: " + e);
        }
    }
}
